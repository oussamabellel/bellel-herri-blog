{% extends 'base.html.twig' %}

{% block title %}Hello AdminPostController!
{% endblock %}

{% block body %}

	<div class="container mt-4">
		<h1>
			Manage Posts
		</h1>
		<hr>

		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}
		<table class="table table-striped">
			<thead>
				<tr>
					<th>
						id
					</th>
					<th>
						Title
					</th>
					<th>
						Date
					</th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				{% for post in posts %}
					<tr>
						<td>
							{{ post.id }}</td>
						<td>
							{{ post.title }}</td>
						<td>
							{{ post.created_at }}</td>
						<td>
							<a href="{{ path('admin_edit', {id : post.id})}}" class="btn btn-primary">
								Modify</a>
							<form method="post" action="{{ path('admin_delete', {id : post.id})}}" style="display: inline-block" onsubmit="return confirm('Are you sure to delete this post ?')">
								<input type="hidden" name="_method" value="DELETE">
								<input type="hidden" name="_token" value="{{csrf_token('delete' ~ post.id)}}">
								<button class="btn btn-danger">
									Delete
								</button>
							</form>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div class="text-right">
			<a href="{{ path('admin_create')}}" class="btn btn-primary">
				Create Post
			</a>
		</div>

	</div>
{% endblock %}
