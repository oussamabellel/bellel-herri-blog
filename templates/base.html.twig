<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title>{% block title %}Welcome!{% endblock %}</title>
  
  {% block stylesheets %}
      <link href="{{ asset('src/bootstrap/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet">
      <link href="{{ asset('styles.css') }}" type="text/css" rel="stylesheet">
  {% endblock %}
</head>

<body>
  <nav id="top-nav" class="navbar navbar-expand-lg navbar-dark">
    <a href="/">
      <img class="navbar-logo" src="{{ asset('images/logo/logo-icon.png') }}">
    </a>
    
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/admin/posts">Manage Posts</a>
        </li>
        {%  if not app.user %}
        <li class="nav-item">
          <a class="nav-link" href="/login">Login</a>
        </li>
        {% endif %}
      </ul>
      {% if app.user %}
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/logout"> Logout </a>
          </li>
          </ul>
      {% endif %}
    </div>
  </nav>

  <div class="mx-3 d-flex justify-content-center">
    {% block body %}
    {% endblock %}
  </div>

  {% block javascripts %}
    <script src="{{ asset('src/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('src/popper/popper.min.js') }}"></script>
    <script src="{{ asset('src/bootstrap/js/bootstrap.min.js') }}"></script>
  {% endblock %}

</body>
</html>