{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}

<div class="container mt-4">
    <h2>{{post.title}}</h2>
    <div class="row">
        <div class="col-md-4">
            {% if post.filename %}
            <img style="width: 100%; height: 100vh; object-fit: cover;" src="{{ vich_uploader_asset(post, 'imageFile')}}">
			{% endif %}
        </div>
        <div class="col-md-8">
            <p> {{ post.description }} </p>
            <br>
            <h6 class="text-right"> Created  : {{ post.createdAt|date("Y-m-d H:i:s") }} </h6>
        </div>
    </div>
</div>
{% endblock %}