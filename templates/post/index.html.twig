{% extends 'base.html.twig' %}

{% block title %}
    {{ post.title }}
{% endblock %}

{% block body %}
    <div class="page-content p-3 bg-white rounded my-shadow">
        <h2>{{post.title}}</h2>
        <div class="row">
            <div class="col-md-4">
                {% if post.filename %}
                <h6 class="text-right"> Créé le  : {{ post.createdAt | date("Y-m-d H:i:s") }} </h6>
                <img class="img-fluid" style="width: 100%; height: 100%;" src="{{ vich_uploader_asset(post, 'imageFile')}}">
                {% endif %}
            </div>
            <div class="col-md-8">
                <p class="text-justify"> {{ post.description }} </p>
                <br>
                
            </div>
        </div>
    </div>
{% endblock %}