{% trans_default_domain 'FOSUserBundle' %}
    <hr class="my-4">
    {% if error %}
        <div class="alert alert-danger" role="alert">{{ error.messageKey | trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <div class="form-group my-3">
            <label for="username">{{ 'security.login.username'|trans }}</label>
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
        </div>

        <div class="form-group my-3">
            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input class="form-control"  type="password" id="password" name="_password" required="required" autocomplete="current-password" />
        </div>

        <div class="custom-control custom-checkbox my-3">
            <input class="custom-control-input" type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label  class="custom-control-label" for="remember_me">
                {{ 'security.login.remember_me' | trans }}
            </label>
            
        </div>

        <hr class="my-4">

        <div class="form-group">
            <input class="col-md-12 btn my-btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </div>   
    </form>
